#!/bin/sh
# Maven Wrapper script
# Download Maven if not present

set -e

MAVEN_PROJECTBASEDIR="${MAVEN_BASEDIR:-$(cd "$(dirname "$0")" && pwd)}"
MAVEN_WRAPPER_JAR_PATH="${MAVEN_PROJECTBASEDIR}/.mvn/wrapper/maven-wrapper.jar"
MAVEN_WRAPPER_PROPERTIES_PATH="${MAVEN_PROJECTBASEDIR}/.mvn/wrapper/maven-wrapper.properties"

if [ -r "$MAVEN_WRAPPER_PROPERTIES_PATH" ]; then
    MAVEN_WRAPPER_URL=$(grep "wrapperUrl" "$MAVEN_WRAPPER_PROPERTIES_PATH" | cut -d'=' -f2-)
fi

if [ ! -f "$MAVEN_WRAPPER_JAR_PATH" ]; then
    echo "Downloading Maven Wrapper..."
    if command -v wget > /dev/null; then
        wget -q -O "$MAVEN_WRAPPER_JAR_PATH" "$MAVEN_WRAPPER_URL"
    elif command -v curl > /dev/null; then
        curl -s -o "$MAVEN_WRAPPER_JAR_PATH" "$MAVEN_WRAPPER_URL"
    else
        echo "Error: Neither wget nor curl found"
        exit 1
    fi
fi

exec java -jar "$MAVEN_WRAPPER_JAR_PATH" "$@"
